  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Unit Tests",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["--testPathPattern=tests/unit"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Integration Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["--testPathPattern=tests/integration"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Single File",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["tests/integration/service/session-service.test.ts"]
    }
  ]
}